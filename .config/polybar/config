[colors]
background = #a0050b10
foreground = ${xrdb:color7}
warning = ${xrdb:color1}
urgent = ${xrdb:color5}

[bar/perfect]
width = 100%
height = 26

background = ${colors.background} 
foreground = ${colors.foreground}

padding-right= 1
module-margin = 1

line-size = 2

font-0 = "DejaVuSansMono Nerd Font:pixelsize=11:antialias=true:autohint=true;3"

tray-position = right
tray-padding = 4

; BEGIN laptop
;monitor = eDP1
;modules-left = i3
;modules-center = time 
;modules-right = wlan xbacklight volume filesystem memory cpu battery temperature
; END laptop

; BEGIN desktop
;monitor = HDMI-0
;modules-left = i3
;modules-center =
;modules-right = volume filesystem memory cpu temperature date
; END desktop



[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

; focused = Active workspace on focused monitor
label-focused = %name%: %icon%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-background = ${self.label-unfocused-background}
label-visible-foreground = ${self.label-unfocused-foreground}
label-visible-padding = ${self.label-focused-padding}
label-visible-overline = ${colors.foreground}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-background = ${self.label-visible-background}
label-urgent-foreground = ${self.label-visible-foreground}
label-urgent-padding = ${self.label-focused-padding}
label-urgent-underline = ${colors.foreground}

[module/time]
type = internal/date
date = %d/%m
time = %H:%M
label = "  %time%   %date%"
interval = 5

[module/wlan]
type = internal/network
interface = wlp3s0
format-connected = <label-connected>
format-connected-prefix = "  "
label-connected = %essid%
format-disconnected =
interval = 3

[module/xbacklight]
type = internal/xbacklight
label = %percentage%%
format = <label>
format-prefix = "  "

[module/volume]
type = internal/volume
label-volume = %percentage%%
label-muted = "muted"
format = <label>
format-volume-prefix = "  "
format-muted-prefix = "  "

[module/filesystem]
type = internal/fs
mount-0 = /
label-mounted = %free%
format = <label>
format-mounted-prefix = "  "
interval = 25

[module/memory]
type = internal/memory
label = %percentage_used:2%%
format = <label>
format-prefix = "  "
interval = 5

[module/cpu]
type = internal/cpu
label = %percentage:2%%
format = <label>
format-prefix = "  "

[module/battery]
type = custom/script
exec = /home/grzegorz/.config/polybar/battery
interval = 10

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = " <ramp> <label>"
format-warn = " <ramp> <label-warn>"
format-warn-foreground = ${colors.warning}

label = %temperature%
label-warn = %temperature%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-5 = 
ramp-6 = 

