#!/bin/bash

#constants
BAT_LOC='/sys/class/power_supply/BAT'
CHARGING=" "
FULL=" "
ALMOST_FULL=" "
HALF_FULL=" "
QUATER_FULL=" "
ALMOST_EMPTY=" "

main() {
    probe_batteries
    get_battery_status
    show_battery_info
}

probe_batteries() {
    BAT_0_STAT=$(cat ${BAT_LOC}0/status)
    BAT_0_ENERGY=$(cat ${BAT_LOC}0/energy_now)
    BAT_0_FULL=$(cat ${BAT_LOC}0/energy_full)
    BAT_0_POWER=$(cat ${BAT_LOC}0/power_now)

    if [[ -d ${BAT_LOC}1 ]]; then
    BAT_1_STAT=$(cat ${BAT_LOC}1/status)
    BAT_1_ENERGY=$(cat ${BAT_LOC}1/energy_now)
    BAT_1_FULL=$(cat ${BAT_LOC}1/energy_full)
    BAT_1_POWER=$(cat ${BAT_LOC}1/power_now)
    fi
}

get_battery_status() {
    if [[ $BAT_1_STAT ]]; then
        #We are docked
        ENERGY_FULL=$(( $BAT_0_FULL + $BAT_1_FULL ))
        ENERGY=$(( $BAT_0_ENERGY + $BAT_1_ENERGY ))
        if [[ $BAT_0_STAT == Discharging ]]; then
            STATUS="Discharging"
            POWER=$BAT_0_POWER
        elif [[ $BAT_1_STAT == Discharging ]]; then
            STATUS="Discharging"
            POWER=$BAT_1_POWER
        elif [[ $BAT_0_STAT == Charging || $BAT_1_STAT == Charging ]]; then
            STATUS="Charging"
            POWER=$BAT_0_POWER
        else 
            STATUS="Discharging"
            POWER=$BAT_0_POWER
        fi
    else
        STATUS=$BAT_0_STAT
        ENERGY_FULL=$BAT_0_FULL
        ENERGY=$BAT_0_ENERGY
        POWER=$BAT_0_POWER
    fi

    if (( $ENERGY_FULL == 0 )); then
        # ACPI is not working properly at the moment
        exit
    fi

    PERC=$(( $ENERGY * 100 / $ENERGY_FULL ))

    if (( $PERC >= 98 )); then
        STATUS=Full
    fi
}

show_battery_info() {
    if [[ $STATUS == Full ]]; then
        echo "$FULL%"
    elif [[ $STATUS == Charging ]]; then
        echo "$CHARGING$PERC%"
    elif [[ $STATUS == Discharging ]]; then
        if (( $POWER == 0 )); then
            exit
        fi

        if   [[ $PERC > 80 ]]; then icon=$FULL
        elif [[ $PERC > 60 ]]; then icon=$ALMOST_FULL
        elif [[ $PERC > 40 ]]; then icon=$HALF_FULL
        elif [[ $PERC > 20 ]]; then icon=$QUATER_FULL
        else                        icon=$ALMOST_EMPTY
        fi

        TIME_LEFT=$(( $ENERGY * 3600 / $POWER ))
        TIME_LEFT=$(date -d "1 jan 1970 + $TIME_LEFT seconds" +%H:%M)

        if (( $PERC <= 5 )); then
            notify-send "Low Battery" "Battery charge at $PERC%" -u critical
        fi

        echo "$icon$PERC%($TIME_LEFT)"
    fi
}

main

