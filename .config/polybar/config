[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
warning = ${xrdb:color1}
urgent = ${xrdb:color5}

[bar/perfect]
width = 100%
height = 18px

background = ${colors.background} 
foreground = ${colors.foreground}

padding-right= 1
module-margin = 1

line-size = 2

font-0 = "GohuFont;2"

tray-position = right
tray-padding = 4

; BEGIN laptop
;monitor = eDP1
;monitor-fallback = HDMI2
;monitor-strict = false
;modules-left = i3
;modules-center = time 
;modules-right = wlan xbacklight volume filesystem memory cpu battery temperature
; END laptop

; BEGIN desktop
;monitor = HDMI-0
;modules-left = i3
;modules-center = time
;modules-right = volume filesystem memory cpu temperature
; END desktop

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
wrapping-scroll = false

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-background = ${self.label-unfocused-background}
label-visible-foreground = ${self.label-unfocused-foreground}
label-visible-padding = ${self.label-focused-padding}
label-visible-overline = ${colors.foreground}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-background = ${self.label-visible-background}
label-urgent-foreground = ${self.label-visible-foreground}
label-urgent-padding = ${self.label-focused-padding}
label-urgent-underline = ${colors.foreground}

[module/time]
type = internal/date
date = %d/%m
time = %H:%M
label = %time% %date%
interval = 5

[module/wlan]
type = internal/network
interface = wlp3s0
format-connected = <label-connected>
format-connected-prefix = wi-fi:
label-connected = %essid%
format-disconnected =
interval = 3

[module/xbacklight]
type = internal/xbacklight
label = %percentage%%
format = <label>
format-prefix = Brighness:

[module/volume]
type = internal/alsa
label-volume = %percentage%%
label-muted = "muted"
format = <label>
format-volume-prefix = Volume:
format-muted-prefix = Volume:

[module/filesystem]
type = internal/fs
mount-0 = /
label-mounted = %free%
format = <label>
format-mounted-prefix = Mem:
interval = 25

[module/memory]
type = internal/memory
label = %percentage_used:2%%
format = <label>
format-prefix = RAM:
interval = 5

[module/cpu]
type = internal/cpu
label = %percentage:02%%
format = <label>
format-prefix = CPU:

[module/battery]
type = custom/script
exec = /home/grzegorz/.config/polybar/battery
interval = 10

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-prefix = Temp:
format-warn = <label-warn>
format-warn-prefix = Temp:
format-warn-foreground = ${colors.warning}

label = %temperature-c%
label-warn = %temperature-c%

[settings]
screenchange-reload = true

vim:ft=dosini
