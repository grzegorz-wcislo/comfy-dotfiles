[colors]
background = #e6263238
background-alt = ${xrdb:color8}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color15}
warning = #FF0000

[bar/perfect]
width = 100%
height = 30

background = #A0000000
foreground = ${colors.foreground}

padding-right= 1
module-margin = 1

font-0 = "DejaVuSansMono Nerd Font:pixelsize=12:antialias=true:autohint=true;3"

tray-position = right
tray-padding = 4

; BEGIN laptop
;monitor = eDP1
;modules-left = bspwm
;modules-center = time
;modules-right = wlan xbacklight volume filesystem memory cpu battery temperature
; END laptop

; BEGIN desktop
;monitor = HDMI-0
;modules-left = i3
;modules-center =
;modules-right = volume filesystem memory cpu temperature date
; END desktop

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

label-focused = %icon%
label-focused-background = ${xrdb:color1}
label-focused-padding = 1

label-occupied = %icon%
label-occupied-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${xrdb:color1}
label-urgent-padding = 1

label-empty = 

[module/time]
type = internal/date
date = %d/%m
time = %H:%M
label = %date% %time%
interval = 5

[module/wlan]
type = internal/network
interface = wlp3s0
format-connected = <label-connected>
format-connected-prefix = "  "
label-connected = %essid%:%local_ip%
format-disconnected =
interval = 3

[module/xbacklight]
type = internal/xbacklight
label = %percentage%%
format = <label>
format-prefix = "  "

[module/volume]
type = internal/volume
label-volume = %percentage%%
label-muted = "muted"
format = <label>
format-volume-prefix = "  "
format-muted-prefix = "  "

[module/filesystem]
type = internal/fs
mount-0 = /
label-mounted = %free%
format = <label>
format-mounted-prefix = "  "
interval = 25

[module/memory]
type = internal/memory
label = %percentage_used:2%%
format = <label>
format-prefix = "  "
interval = 5

[module/cpu]
type = internal/cpu
label = %percentage:2%%
format = <label>
format-prefix = "  "

[module/battery]
type = custom/script
exec = /home/grzegorz/.config/polybar/battery
interval = 10

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = " <ramp> <label>"
format-warn = " <ramp> <label-warn>"
format-warn-foreground = ${colors.warning}

label = %temperature%
label-warn = %temperature%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-5 = 
ramp-6 = 

