[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color8}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color15}
warning = #FF0000

[bar/perfect]
width = 100%
height = 27
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 10
border-bottom-size = 0
border-color = #00000000

padding= 1

module-margin-left = 1
module-margin-right = 2

font-0 = "Noto Sans:style=bold:pixelsize=12;3"
font-1 = "Inconsolata Nerd Font Mono:pixelsize=30;5"
font-2 = "Inconsolata Nerd Font Mono:pixelsize=18;4"

; BEGIN laptop
;monitor = eDP1
;modules-left = i3
;modules-center =
;modules-right = wlan xbacklight volume filesystem memory cpu battery1 battery2 temperature date
; END laptop

; BEGIN desktop
;monitor = HDMI-0
;modules-left = i3
;modules-center =
;modules-right = xbacklight volume filesystem memory cpu temperature date
; END desktop

tray-position = right
tray-padding = 4
;tray-transparent = true
;tray-background = #0063ff

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %percentage_used%%
label-mounted-foreground = ${xrdb:color5}

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${xrdb:color1}
label-focused-foreground = ${colors.background}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-background = ${self.label-focused-background}
label-urgent-underline = ${colors.warning}
label-urgent-padding = ${self.label-focused-padding}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <label>
label =  %percentage%%
label-foreground = ${xrdb:color3}

[module/cpu]
type = internal/cpu
interval = 2
format =  <label>
format-foreground = ${xrdb:color5}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format =  <label>
format-foreground = ${xrdb:color6}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected =  <label-connected>
format-connected-foreground = ${xrdb:color2}
label-connected = %essid%: %downspeed%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = %d/%m

time = %H:%M

format-foreground = ${xrdb:color2}

label =  %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${xrdb:color4}

format-muted-prefix =
format-muted-foreground = ${xrdb:color4}
label-muted = 

[module/battery1]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <ramp-capacity> <label-charging>
