! special
*foreground:   #f8f8f2
*background:   #000000
*cursorColor:  #f8f8f2

! black
*color0:       #000000
*color8:       #75715e

! red
*color1:       #f92672
*color9:       #f92672

! green
*color2:       #a6e22e
*color10:      #a6e22e

! yellow
*color3:       #f4bf75
*color11:      #f4bf75

! blue
*color4:       #66d9ef
*color12:      #66d9ef

! magenta
*color5:       #ae81ff
*color13:      #ae81ff

! cyan
*color6:       #a1efe4
*color14:      #a1efe4

! white
*color7:       #f8f8f2
*color15:      #f9f8f5

#define MONOFONT DejaVu Sans Mono Nerd Font

! BEGIN laptop
!Xft.dpi: 120
! END laptop

! BEGIN desktop
!Xft.dpi: 82
! END desktop

URxvt*font: xft:MONOFONT:size=14
URxvt*internalBorder: 15
URxvt*scrollBar: False
URxvt*depth: 32

rofi*terminal: st
rofi*lines: 1
rofi*display-drun: Launch
rofi*matching: fuzzy
rofi*padding: 20
rofi*width: 25
rofi*color-enabled: true
! Property Name     BG             Border         Separator
rofi*color-window:  argb:C0000000, argb:C0000000, argb:C0000000
! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi*color-normal:  #000000, #f8f8f2, #000000, #a1efe4, #263238
rofi*color-active:  #000000, #f8f8f2, #000000, #a1efe4, #263238
rofi*color-urgent:  #000000, #f8f8f2, #000000, #a1efe4, #263238
! Set the desired separator style
rofi*separator-style: solid
rofi*hide-scrollbar: true
rofi*font: MONOFONT 16
