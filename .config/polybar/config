[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
warning = ${xrdb:color1}
urgent = ${xrdb:color5}

[bar/perfect]
width = 100%
height = 22px

background = ${colors.background}
foreground = ${colors.foreground}

padding-right= 1
module-margin = 1

line-size = 2

font-0 = "Fira Code:style=Regular:pixelsize=12;3"
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=12;2"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=12;2"
font-3 = "Font Awesome 5 Brands:style=Regular:pixelsize=12;2"

tray-position = right
tray-padding = 4

monitor = HDMI2
monitor-fallback = eDP1
monitor-strict = false
modules-left = i3
modules-center = time
modules-right = eth wlan backlight volume filesystem memory cpu battery temperature

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
wrapping-scroll = false

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = ${self.label-focused-padding}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-background = ${self.label-unfocused-background}
label-visible-foreground = ${self.label-unfocused-foreground}
label-visible-padding = ${self.label-focused-padding}
label-visible-overline = ${colors.foreground}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-background = ${self.label-visible-background}
label-urgent-foreground = ${self.label-visible-foreground}
label-urgent-padding = ${self.label-focused-padding}
label-urgent-underline = ${colors.foreground}

[module/time]
type = internal/date
date = %d/%m
time = %H:%M
label = %time% %date%
interval = 5

[module/eth]
type = internal/network
interface = enp0s31f6
format-connected = <label-connected>
format-connected-prefix = " "
label-connected = %essid%
format-disconnected =
interval = 3

[module/wlan]
type = internal/network
interface = wlp58s0
format-connected = <label-connected>
format-connected-prefix = " "
label-connected = %essid%
format-disconnected =
interval = 3

[module/backlight]
type = internal/backlight
card = intel_backlight
label = %percentage%%
format = <label>
format-prefix = " "

[module/volume]
type = internal/pulseaudio
label-volume = %percentage%%
label-muted = "mute"
format-volume-prefix = " "
format-muted-prefix = " "

[module/filesystem]
type = internal/fs
mount-0 = /
label-mounted = %free%
format = <label>
format-mounted-prefix = " "
interval = 25

[module/memory]
type = internal/memory
label = %percentage_used:02%%
format = <label>
format-prefix = " "
interval = 5

[module/cpu]
type = internal/cpu
label = %percentage:02%%
format = <label>
format-prefix = " "

[module/battery]
type = custom/script
exec = /home/grzegorz/.config/polybar/battery
interval = 10

[module/temperature]
type = internal/temperature
warn-temperature = 70

format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-warn-foreground = ${colors.warning}

label = %temperature-c%
label-warn = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[settings]
