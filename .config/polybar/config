format-discharging-foreground = ${xrdb:color4}

format-full = <ramp-capacity> <label-full>
format-full-foreground = ${xrdb:color4}
format-full-overline = ${xrdb:color4}

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.warning}
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/battery2]
